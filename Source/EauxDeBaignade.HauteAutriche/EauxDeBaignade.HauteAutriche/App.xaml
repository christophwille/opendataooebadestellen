<Application 
    x:Class="EauxDeBaignade.HauteAutriche.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:local="clr-namespace:EauxDeBaignade.HauteAutriche">

    <!--Application Resources-->
    <Application.Resources>
        <sys:Double x:Key="PanoramaItemHeaderFontSize">66</sys:Double>

        <Style x:Key="PanoramaItemHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource PhoneFontFamilySemiLight}"/>
            <Setter Property="FontSize" Value="{StaticResource PanoramaItemHeaderFontSize}"/>
            <Setter Property="CharacterSpacing" Value="-35"/>
        </Style>

        <sys:String x:Key="GitHubUrl">https://github.com/christophwille/opendataooebadestellen/</sys:String>
        <sys:String x:Key="PrivacyPolicyUrl">https://github.com/christophwille/opendataooebadestellen/wiki/Datenschutzerkl%C3%A4rung</sys:String>

        <local:LocalizedStrings x:Key="LocalizedStrings"/>
        <local:AppBootstrapper x:Key="Bootstrapper" />
    </Application.Resources>

    <Application.ApplicationLifetimeObjects>
    </Application.ApplicationLifetimeObjects>
</Application>